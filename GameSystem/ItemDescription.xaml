<Window x:Class="GameSystem.ItemDescription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ItemDescription" Height="Auto" Width="300" Loaded="Window_Loaded" SizeToContent="Height" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Name="lblItemName" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Papyrus" FontSize="24"/>
        <TextBlock Name="txtblkItemDescription" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" TextWrapping="Wrap" FontSize="20" FontFamily="Papyrus"/>
    </Grid>
</Window>
